<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <rule name="Installer Assets" stopProcessing="true">
          <match url="^assets/(.*)$" />
          <action type="Rewrite" url="public/assets/{R:1}" />
        </rule>

        <rule name="Installer Root" stopProcessing="true">
          <match url="^$" />
          <action type="Rewrite" url="public/" />
        </rule>

        <rule name="Installer Single Segment" stopProcessing="true">
          <match url="^([^/]+)$" />
          <action type="Rewrite" url="public/{R:1}" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
